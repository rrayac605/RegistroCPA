<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>mx.gob.imss.cit.dictamen</groupId>
		<artifactId>dictamen-soa</artifactId>
		<version>1.0</version>
	</parent>

	<artifactId>dictamen-soa-services</artifactId>
	<version>${project.parent.version}</version>
	<name>dictamen - soa - services</name>
	<packaging>ejb</packaging>

	<dependencies>
		<dependency>
		   <groupId>mx.gob.imss.ctirss.clienteswebservices.sat.consulta.rfc</groupId>
		   <artifactId>ClientesWebservices-sat-consulta-rfc</artifactId>
		   <version>2.2</version>
	    </dependency>
		
		<dependency>
	      	<groupId>mx.gob.imss.ctirss.delta</groupId>
	      	<artifactId>delta-modelo-negocio</artifactId>
	      	<version>${delta.framework.version}</version>
	      	<type>jar</type>
	    </dependency>
		
		<dependency>
			<groupId>mx.gob.imss.cit.dictamen</groupId>
			<artifactId>dictamen-soa-commons</artifactId>
			<version>${project.parent.version}</version>
		</dependency>

		<dependency>
			<groupId>mx.gob.imss.cit.dictamen</groupId>
			<artifactId>dictamen-soa-model</artifactId>
			<version>${project.parent.version}</version>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>mx.gob.imss.cit.dictamen</groupId>
			<artifactId>dictamen-soa-persistence</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>mx.gob.imss.cit.dictamen</groupId>
			<artifactId>dictamen-soa-persistence</artifactId>
			<type>test-jar</type>
			<version>${project.parent.version}</version>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>mx.gob.imss.cit.dictamen</groupId>
			<artifactId>dictamen-soa-integration-api</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		
		<dependency>
			<groupId>mx.gob.imss</groupId>
   			<artifactId>imss-ws-clients</artifactId>
			<version>2.5</version>
			<scope>compile</scope>
		</dependency>
		
		<!-- Cliente de pensiones que contiene el acceso a la BDTU -->
		<dependency>
			<groupId>mx.gob.imss.cit.solicitudPension.serviciosNegocio.ws</groupId>
			<artifactId>imss-ws-clientes-pensiones</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>${java-ee.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.5</version>
			<scope>compile</scope>
		</dependency>
		<!-- Mockito -->
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<version>1.9.5</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.10.17</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<version>${maven-ejb-plugin.version}</version>
				<configuration>
					<ejbVersion>3.1</ejbVersion>
					<archive>
						<manifest>
							<addClasspath>false</addClasspath>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>